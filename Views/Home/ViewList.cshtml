@{
}

@model List<Movie>

<h1>List of Entered Movies</h1>
<br/>

<table class="table table-striped table-hover shadow-sm mt-3">
    
    <thead class="table-dark">
    <td>Title</td>
    <td>Category</td>
    <td>Year</td>
    <td>Director</td>
    <td>Rating</td>
    <td>Edited</td>
    <td>Lent To</td>
    <td>Copied to Plex?</td>
    <td>Notes</td>
    
    </thead>
    
    @* Look at all of the movies and display them *@
    @foreach (var x in Model)
    {
        <tbody>
        <tr>
            <td>@x.Title</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.CopiedToPlex</td>
            <td>@x.Notes</td>

            <td><a class="btn btn-info" asp-controller="Home", asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
            
        </tr>
        </tbody>
    }
</table>